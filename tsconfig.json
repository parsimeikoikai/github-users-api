{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
    "src/**/*",
    "__tests__/**/*",  // Include test files
    "src/config/**/*"   // Ensure config files are included too
  ]
  }